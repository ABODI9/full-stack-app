{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2021"],
    "types": ["node"],
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "prisma/seed.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/controllers/**/*"  // ← لو تبغى تبقيه، احذف هذا السطر
  ]
}
