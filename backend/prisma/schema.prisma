generator client { provider = "prisma-client-js" }

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  name        String?
  email       String      @unique
  password    String
  role        String      @default("user")
  createdAt   DateTime    @default(now())
  records     Record[]
  costEntries CostEntry[]
  messages    Message[]
  orders      Order[]     @relation("UserOrders")
}

model Record {
  id        Int      @id @default(autoincrement())
  title     String
  value     Float
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  @@index([userId, createdAt])
}

model CostEntry {
  id        Int      @id @default(autoincrement())
  date      DateTime
  items     String
  amount    Decimal  @db.Decimal(12, 2)
  createdAt DateTime @default(now())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  @@index([userId, date])
  @@map("cost_entries") // ← اسم الجدول الفعلي
}

model Message {
  id        Int      @id @default(autoincrement())
  role      String   // 'user' | 'assistant'
  text      String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  @@index([userId, createdAt])
  @@map("messages") // ← اسم الجدول الفعلي
}

model Order {
  id              Int       @id @default(autoincrement())
  insertdate      DateTime
  ordertotal      Decimal?  @db.Decimal(12, 2)
  externalappname String?
  customerid      Int?
  lat             Float?
  lng             Float?
  userId          Int?
  user            User?     @relation("UserOrders", fields: [userId], references: [id])

  @@index([insertdate])
  @@index([externalappname])
  @@index([customerid])
  @@map("orders") // مهم جداً
}

